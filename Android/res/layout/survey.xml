<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
	
        <TextView
            android:text="Website Workshop"
            android:ems="30"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        
        <TextView 
            android:text="This week coders at CodoDojo will be working on creating their own web pages, using HTML, CSS, and Javascript."
            android:layout_width="fill_parent"
            android:ems="12"
            android:layout_height="wrap_content"/>
        <TextView
            android:paddingTop="30dp"
            android:ems="12"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="I am experienced or interested in..." />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HTML/CSS" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Javascript" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Design" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/survey_continue"/>

    </LinearLayout>
    

</ScrollView>
